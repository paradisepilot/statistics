> # data
> DF.car.journeys <- data.frame(
+ 	distance = c(  1,   3,   4,   5),
+ 	duration = c(0.1, 0.4, 0.5, 0.6)
+ 	);
> DF.car.journeys;
  distance duration
1        1      0.1
2        3      0.4
3        4      0.5
4        5      0.6
> 
> ### USING lm #######################################################################################
> # with intercept term
> LM.car.journeys <- lm(
+ 	formula = distance ~ duration,
+ 	data    = DF.car.journeys,
+    );
> summary(LM.car.journeys);

