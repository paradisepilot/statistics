> 
> ### HAND CALCULATION ###############################################################################
> # observed data
> y <- DF.car.journeys[,'distance'];
> y;
[1] 1 3 4 5
> 
> # model matrix
> X <- matrix(
+ 	data = c(rep(1,nrow(DF.car.journeys)),DF.car.journeys[,'duration']),
+ 	nrow = nrow(DF.car.journeys),
+ 	ncol = 2
+ 	);
> X;
     [,1] [,2]
[1,]    1  0.1
[2,]    1  0.4
[3,]    1  0.5
[4,]    1  0.6
> 
> beta_hat <- solve(t(X) %*% X) %*% (t(X) %*% y);
> beta_hat;
          [,1]
[1,] 0.1071429
[2,] 7.8571429
